generator client {
  provider = "prisma-client-js"
}

datasource database {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model completedInterview {
  id          String    @id @default(uuid())
  clerkUserId String    // Clerk user ID, no relation needed
  interviewId String
  timeTaken   Int
  score       Float?
  completedAt DateTime  @default(now())
  feedback    Json?
  messages    Message[]
  interview   Interview @relation(fields: [interviewId], references: [id])

  @@index([clerkUserId]) // Index for faster queries
}

model Interview {
  id                  String               @id @default(uuid())
  type                String
  topic               String?
  description         String
  expectedDuration    Int
  prompt              String
  tags                String[]             @default([])
  difficulty          String               @default("Medium")
  premium             Boolean              @default(false)
  completedInterviews completedInterview[]
}

model Message {
  id                   String             @id @default(uuid())
  completedInterviewId String
  content              String
  sequence             Int
  role                 String
  completedInterview   completedInterview @relation(fields: [completedInterviewId], references: [id])
}

model InterviewSession {
  id           String   @id @default(uuid())
  clerkUserId  String   // Clerk user ID
  interviewId  String
  sessionToken String   @unique
  createdAt    DateTime @default(now())
  expiresAt    DateTime
  isActive     Boolean  @default(true)

  @@index([clerkUserId])
}
