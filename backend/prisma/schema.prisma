generator client {
  provider = "prisma-client-js"
}

datasource database {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(uuid())
  clerkId             String               @unique
  email               String               @unique
  subTeir             String               @default("free")
  createdAt           DateTime             @default(now())
  profilePicture      String?
  username            String?              @unique
  completedInterviews completedInterview[]
}

model completedInterview {
  id          String    @id @default(uuid())
  userId      String
  interviewId String
  timeTaken   Int
  score       Float?
  completedAt DateTime  @default(now())
  feedback    Json?
  messages    Message[]
  interview   Interview @relation(fields: [interviewId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
}

model Interview {
  id                  String               @id @default(uuid())
  type                String
  topic               String?
  description         String
  expectedDuration    Int
  prompt              String
  tags                String[]             @default([])
  difficulty          String               @default("Medium")
  premium             Boolean              @default(false)
  completedInterviews completedInterview[]
}

model Message {
  id                   String             @id @default(uuid())
  completedInterviewId String
  content              String
  sequence             Int
  role                 String
  completedInterview   completedInterview @relation(fields: [completedInterviewId], references: [id])
}
